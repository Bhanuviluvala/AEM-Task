<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Card Listing"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <filtertitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="This is the field for filter title"
                                        fieldLabel="Filter Title"
                                        name="./filterTitle"/>
                                    <cardimage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Root Path of Card Pages"
                                        fieldLabel="Root Path"
                                        name="./cardRootPath"
                                        required="{Boolean}true"
                                        rootPath="/content"/>
                                </items>
                            </column>
                        </items>
                    </basic>
                    <tagdetails
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Filter Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="This is the field for filter title"
                                        fieldLabel="Sort Title"
                                        name="./sortTitle"
                                        renderReadOnly="{Boolean}true"/>
                                    <sorttags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        fieldDescription="Filters for Sort Filter Dropdown"
                                        fieldLabel="Sort Filters"
                                        multiple="{Boolean}true"
                                        name="./cardsortTag"
                                        rootPath="/content/cq:tags/my-stack-tags/sort-tags"/>
                                    <categorytitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="This is the field for Category title"
                                        fieldLabel="Category Title"
                                        name="./categoryTitle"
                                        renderReadOnly="{Boolean}true"/>
                                    <categorytags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        fieldDescription="Filters for Category Filter Dropdown"
                                        fieldLabel="Category Filters"
                                        multiple="{Boolean}true"
                                        name="./categoryTag"
                                        rootPath="/content/cq:tags/my-stack-tags/card-category-tags"/>
                                </items>
                            </column>
                        </items>
                    </tagdetails>
                    <misc
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Misc"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <noresultstext
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="This is the field for display text when there were no results"
                                        fieldLabel="No Results Text"
                                        name="./noresultsText"/>
                                    <errortext
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="This is the field for display text when some error occurs"
                                        fieldLabel="Error Text"
                                        name="./errorText"
                                        renderReadOnly="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </misc>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
